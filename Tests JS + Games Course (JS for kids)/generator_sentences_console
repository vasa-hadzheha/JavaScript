//generator of words
var alphabet="qwertyuiopasdfghjklzxcvbnm";
var i = 0;
var randomWord = "";
while(i<6){
var ranInd= Math.floor(Math.random() * alphabet.length);
randomWord+=alphabet[ranInd];
i++;
}
randomWord;
//output 'lrihil'

//h4ck3r sp34k
var input = "javascript is awesome"
var output = "";
for(var i=0;i<input.length;i++){
    if(input[i]=="a"){
        output+=4;
}
    else if (input[i]=="e"){
         output+=3;
}
    else if (input[i]=="i"){
         output+=1;
}
    else if (input[i]=="o"){
         output+=0;
}
    else{
        output+=input[i];
}

}
output;
//'j4v4scr1pt 1s 4w3s0m3'